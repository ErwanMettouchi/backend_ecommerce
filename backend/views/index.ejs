<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Accueil</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@700&display=swap" rel="stylesheet">
</head>

<body>
  <div class="container">
    <%- include('./header') %>
      <main class="content">
        <section>
          <div class="categories">
            <%
              let nomSousCategorie1 = "";
              let nomSousCategorie2 = "";
              let urlSousCategorie1 = "";
              let urlSousCategorie2 = "";
              %>
            <% for (let i = 0; i < categorie.length; i++) { 

              switch(categorie[i].id) {
                case "63f612da1431276e1dc24343" :
                  nomSousCategorie1 = "Ã‰crans";
                  nomSousCategorie2 = "Disques durs externes";
                  urlSousCategorie1 = "ecrans";
                  urlSousCategorie2 = "disques-durs-externes";
                  break;
                case "63f613361431276e1dc24344":
                  nomSousCategorie1 = "Pc gamer";
                  nomSousCategorie2 = "Pc portables";
                  urlSousCategorie1 = "pc-gamer";
                  urlSousCategorie2 = "pc-portables";
                  break;
                case "63f613441431276e1dc24345":
                  nomSousCategorie1 = "Cartes graphiques";
                  nomSousCategorie2 = "Processeurs";
                  urlSousCategorie1 = "cartes-graphiques";
                  urlSousCategorie2 = "processeurs";
                  break;
                case "63f619731431276e1dc24346":
                  nomSousCategorie1 = "Souris gamer";
                  nomSousCategorie2 = "Claviers gamer";
                  urlSousCategorie1 = "souris-gamer";
                  urlSousCategorie2 = "claviers-gamer";
                  break;
              } %>
            <div class="category-card">
              <div class="image-category">
                <img src="/images/accueil/<%= categorie[i].nom_url %>.png" alt="<%= categorie[i].nom %>" title="<%= categorie[i].nom %>">
              </div>
              <h2><a href="/categories/<%= categorie[i].nom_url %>"><%= categorie[i].nom %></a></h2>
              <p class="sub-category"><a href="/sub-category/<%= urlSousCategorie1 %>"><%= nomSousCategorie1 %></a></p>
              <p class="sub-category"><a href="/sub-category/<%= urlSousCategorie2 %>"><%= nomSousCategorie2 %></a></p>
            </div>
            <% } %>
          </div>
        </section>
        <hr>
        <h2 class="text-align-center font-32 marques">Les marques</h2>
        <section>
          <div class="brand-links-container">
            <div class="brand-links">
              <a href="/brand/msi"><img src="/images/accueil/msi.png" alt="Logo de la marque MSI" width="100"></a>
              <a href="/brand/corsair"><img src="/images/accueil/corsair.png" alt="Logo de la marque Corsair"
                  width="100"></a>
              <a href="/brand/intel"><img src="/images/accueil/intel.png" alt="Logo de la marque Intel" width="100"></a>
              <a href="/brand/acer"><img src="/images/accueil/acer.png" alt="Logo de la marque Acer" width="100"></a>
            </div>
          </div>
        </section>
      </main>
      <%- include('./footer') %>
  </div>
</body>
<script src="https://kit.fontawesome.com/8c916de43d.js" crossorigin="anonymous"></script>
<script src="/js/main.js"></script>

</html>